{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "**/*.class"
    ],
    "verbose": true,
    "execMap": {
        "java": "mvn compile"
    },
    "exec": "mvn compile",
    "delay":2500,
    "events": {
        "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
       "src/main/java"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "java"
}